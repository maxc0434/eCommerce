{% extends 'base.html.twig' %}

{% block title %} Panier {% endblock %}

{% block body %}
    <div class="container">
        <h1>Panier</h1>
        <table class="table table-bordered">
            <tr>
                <th>Produit</th>
                <th>Prix</th>
                <th>Quantité</th>
                <th>Prix Total</th>
                <th>Action</th>
            </tr>
            {% for item in items %}
            <tr>
                <td>{{item.product.Name}}</td>
                <td>{{item.product.Price}} €</td>
                <td>{{item.quantity}}</td>
                <td>{{item.product.price * item.quantity}}</td>
                <td>
                    <a href="{{path('app_cart_product_remove', {'id':item.product.id})}}" class="text-danger text-decoration-none">Supprimer du Panier</a>
                </td>
            </tr>

            {% else %}
                <p> Votre Panier est vide </p>
            {% endfor %}
        </table>
        {% if total > 0 %}
            <h2>Total à payer : {{total}} €</h2>
            <div class="row w-25">
                <a href="" data-turbo="false" class="btn btn-outline-primary">Valider la Commande </a>
                <a href="{{path('app_cart_remove')}}" class="btn btn-outline-danger">Supprimer la commande </a>
            </div>
        {% endif %}
    </div>
{% endblock %}
