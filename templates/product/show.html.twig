{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/showpage.css') }}">
{% endblock %}

{% block body %}

    <div class="container">
    <h1 class="productTitle">Les Produits</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.Name }}</td>
            </tr>
            <tr>
                <th>Caption</th>
                <td>{{ product.caption }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.Price }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ product.image }}</td>
            </tr>
        </tbody>
    </table>
    </div>
    <div class="container">
    <a class="btn btn-outline-secondary" href="{{ path('app_product_index') }}">Retour</a>

    <a class="btn btn-outline-primary" href="{{ path('app_product_edit', {'id': product.id}) }}">Modifier</a>

    <a class="btn btn-outline-secondary" href="{{ path('app_product_stock_add_history', {'id': product.id}) }}">Afficher l'Historique de Stock</a>

    </div>
    
    {{ include('product/_delete_form.html.twig') }}


{% endblock %}
