{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/homepage.css') }}">
{% endblock %}



{% block body %}

 {% include 'layouts/_flash_message.html.twig' %}
    <div class="example-wrapper divHomePage">

        <h1 class="homeTitle"> MotoShop ... </h1>
        <h2 class="homeSlogan"> Partir, c'est pourrir un pneu</h2>
    </div>

<div class="divBody">
